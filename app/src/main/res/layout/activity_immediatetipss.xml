<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Immediatetips">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Things Every Woman Should Know: Essential Safety Tips~"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Tip 1 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="1. Trust Your Intuition: If something feels off or makes you uncomfortable, trust your instincts and take action to remove yourself from the situation."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 2 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="2. Stay Aware of Your Surroundings: Be mindful of your environment, whether you're walking alone, in a parking lot, or using public transportation. Avoid distractions like texting or wearing headphones that can prevent you from being fully aware."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 3 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="3. Keep Emergency Contacts Handy: Have important phone numbers programmed into your phone or written down somewhere easily accessible, including friends, family, local authorities, and emergency hotlines."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 4 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="4. Use Well-Lit Paths: Stick to well-lit streets and paths, especially when walking alone at night. Avoid shortcuts through dark or secluded areas."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 5 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="5. Stay Connected: Keep someone informed of your whereabouts, especially if you're going out alone. Share your plans with a trusted friend or family member and check in with them periodically."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 6 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="6. Learn Self-Defense Techniques: Consider taking self-defense classes to learn practical techniques for protecting yourself in dangerous situations. This can boost your confidence and help you react effectively if you're ever threatened."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 7 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="7. Carry a Safety Device: While pepper spray or a personal alarm can be effective tools for self-defense, make sure you're trained in their use and comply with local laws regarding their possession."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 8 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="8. Avoid Excessive Alcohol Consumption: Drinking excessively can impair your judgment and make you more vulnerable to potential threats. If you choose to drink, do so responsibly and be mindful of your surroundings."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 9 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="9. Travel in Groups: Whenever possible, travel with trusted friends or family members, especially in unfamiliar or potentially unsafe areas."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 10 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="10. Trustworthy Transportation: Use reputable transportation services, especially when traveling alone at night. If you're using a ride-sharing service, make sure to verify the driver and vehicle details before getting in."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- Tip 11 CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/gradient_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="11. Assert Yourself: Be assertive and confident in your interactions with others. Set clear boundaries and don't hesitate to speak up if you feel uncomfortable or threatened."
                    android:textColor="#713ABE"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>